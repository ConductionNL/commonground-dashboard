{% extends "body.html.twig" %}

{% set view = 'app_zgw_case' %}

{% block content %}

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' with {
                'headerTitle': 'cases',
                'name' : 'cases'|trans|capitalize,
                'breadcrumbs': [{
                    'home' : {
                        'name' : 'home',
                        'path' : 'app_default_index'
                    }
                }]
            }
            %}
            <div style="margin-top: -25px;" class="col-md-12">
                <div class="card full-height">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'description'|trans|capitalize }}</th>
                            <th scope="col">{{ 'casetype'|trans|capitalize }}</th>
                            <th scope="col">{{ 'startDate'|trans|capitalize }}</th>
                            <th scope="col">{{ 'registrationDate'|trans|capitalize }}</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for resource in resources %}
                        <tr>
                            <td>{{ resource.omschrijving }}</td>
                            <td>{# commonground_resource(resource.zaaktype).omschrijving #}</td>
                            <td>{{ resource.startdatum|date("d-m-Y", "Europe/Paris") }}</td>
                            <td>{{ resource.registratiedatum|date("d-m-Y", "Europe/Paris") }}</td>
                            <td><a style="background: #cfebfd; padding: 6px; border-radius: 6px" href="{{ path(view, {id: resource.id}) }}"><i class="far fa-edit mr-2"></i><b>{{ 'edit'|trans|capitalize }}</b></a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>


        </div>

        {% include 'footer.html.twig' %}

    </div>

{% endblock %}
