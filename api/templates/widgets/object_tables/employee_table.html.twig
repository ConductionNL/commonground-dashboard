<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Contact</th>
                <th scope="col">Source organization</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
			{% for index, employee in employees %}
            <tr>
                <td>{{ employee.id }}</td>
                <td>{{ employee.contact }}</td>
                <td>{{ employee.source_organization }}</td>
                <td><a href="{{ path('app_medewerker_edit',{'id':employee.id}) }}">Edit</a></td>
            </tr>
			{% endfor %}
            </tbody>
        </table>
    </div>
</div>
