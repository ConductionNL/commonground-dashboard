<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Payment provider</th>
                <th scope="col">Payment ID</th>
                <th scope="col">Status</th>
                <th scope="col">Invoice</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
			{% for index, payment in payments._embedded.item %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.payment_provider }}</td>
                <td>{{ payment.payment_id }}</td>
                <td>{{ payment.status }}</td>
                <td>{{ payment.invoice }}</td>
                <td><a href="{{ path('app_betaal_edit',{'id':payment.id}) }}">Edit</a></td>
            </tr>
			{% endfor %}
            </tbody>
        </table>
    </div>
</div>
