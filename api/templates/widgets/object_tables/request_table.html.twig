<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Status</th>
                <th scope="col">Organization</th>
                <th scope="col">Submitter</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
			{% for index, resource in resources['hydra:member'] %}
            <tr>
                <td>{{ resource.request_type }}</td>
                <td>{{ resource.status }}</td>
                <td>{{ resource.target_organization }}</td>
                <td>{{ resource.submitter }}</td>
                <td><a href="{{ path('app_component_resource',{'component':componentName,'resourcetype':resource['@id']}) }}">Edit</a></td>
            </tr>
			{% endfor %}
            </tbody>
        </table>
    </div>
</div>
