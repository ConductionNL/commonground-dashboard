<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Naam</th>
                <th scope="col">Geboorte</th>
                <th scope="col">In onderzoek</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for index, kind in kinderen._embedded.item %}
                <tr>
                    <td>{{ geboorte.uuid }}</td>
                    <td>{{ geboorte.naam }}</td>
                    <td>{{ geboorte.geboorte }}</td>
                    <td>{{ geboorte.in_onderzoek }}</td>
                    <td><a href="{{ path('app_brp_edit',{'id':kind.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
