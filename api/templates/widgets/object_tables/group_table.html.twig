<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Logo</th>
                <th scope="col">Source Organization</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for index, group in groups._embedded.item %}
                <tr>
                    <td>{{ group.id }}</td>
                    <td>{{ group.name }}</td>
                    <td>{{ group.description }}</td>
                    <td>{{ group.logo }}</td>
                    <td>{{ group.sourceOrganization }}</td>
                    <td><a href="{{ path('app_product_edit',{'id':group.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
