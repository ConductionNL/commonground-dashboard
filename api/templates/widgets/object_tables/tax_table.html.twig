<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Percentage</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for index, tax in taxes._embedded.item %}
                <tr>
                    <td>{{ tax.id }}</td>
                    <td>{{ tax.name }}</td>
                    <td>{{ tax.price }}</td>
                    <td>{{ tax.percentage }}</td>
                    <td><a href="{{ path('app_product_edit',{'id':tax.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
