<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Summary</th>
                <th scope="col">Action</th>
                <th scope="col">Trigger</th>
                <th scope="col">Duration</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for index, alarm in alarms %}
                <tr>
                    <td>{{ alarm.name }}</td>
                    <td>{{ alarm.summary }}</td>
                    <td>{{ alarm.action }}</td>
                    <td>{{ alarm.trigger }}</td>
                    <td>{{ alarm.duration }}</td>
                    <td><a href="{{ path('app_agenda_edit',{'id':alarm.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
