<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Datum</th>
                <th scope="col">In onderzoek</th>
                <th scope="col">Land</th>
                <th scope="col">Plaats</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
			{% for index, geboorte in geboortes._embedded.item %}
            <tr>
                <td>{{ geboorte.uuid }}</td>
                <td>{{ geboorte.datum }}</td>
                <td>{{ geboorte.in_onderzoek }}</td>
                <td>{{ geboorte.land }}</td>
                <td>{{ geboorte.plaats }}</td>
                <td><a href="{{ path('app_brp_edit',{'id':geboorte.id}) }}">Edit</a></td>
            </tr>
			{% endfor %}
            </tbody>
        </table>
    </div>
</div>
