<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">BSN</th>
                <th scope="col">Naam</th>
                <th scope="col">Geboorte</th>
                <th scope="col">Geslacht</th>
                <th scope="col">Ouder aanduidng</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
			{% for index, ouder in ouders._embedded.item %}
            <tr>
                <td>{{ ouder.burgerservicenummer }}</td>
                <td>{{ ouder.naam }}</td>
                <td>{{ ouder.geboorte }}</td>
                <td>{{ ouder.geslachtsaanduiding }}</td>
                <td>{{ ouder.ouderAanduiding }}</td>
                <td><a href="{{ path('app_brp_edit',{'id':geboorte.id}) }}">Edit</a></td>
            </tr>
			{% endfor %}
            </tbody>
        </table>
    </div>
</div>
