<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Created At</th>
                <th scope="col">Order</th>
                <th scope="col">Items</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
			{% for index, invoice in invoices._embedded.item %}
            <tr>
                <td>{{ invoice.id }}</td>
                <td>{{ invoice.name }}</td>
                <td>{{ invoice.price }}</td>
                <td>{{ invoice.createdAt }}</td>
                <td>{{ invoice.order }}</td>
                <td>{{ invoice.items }}</td>
                <td><a href="{{ path('app_betaal_edit',{'id':invoice.id}) }}">Edit</a></td>
            </tr>
			{% endfor %}
            </tbody>
        </table>
    </div>
</div>
