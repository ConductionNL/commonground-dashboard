<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Logo</th>
                <th scope="col">Price</th>
                <th scope="col">Calendar</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for index, product in products._embedded.item %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.logo }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.calendar }}</td>
                    <td><a href="{{ path('app_product_edit',{'id':product.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
