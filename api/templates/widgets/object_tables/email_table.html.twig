<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">E-mail</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for index, email in emails %}
                <tr>
                    <td>{{ email.id }}</td>
                    <td>{{ email.name }}</td>
                    <td>{{ email.email }}</td>
                    <td><a href="{{ path('app_contact_edit',{'id':email.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
