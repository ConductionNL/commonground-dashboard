<div class="col-md-12">
    <div class="card full-height">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">KVK</th>
                <th scope="col">Logo</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for index, supplier in suppliers._embedded.item %}
                <tr>
                    <td>{{ supplier.id }}</td>
                    <td>{{ supplier.name }}</td>
                    <td>{{ supplier.kvk }}</td>
                    <td>{{ supplier.logo }}</td>
                    <td><a href="{{ path('app_product_edit',{'id':supplier.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
