<div class="card p-4 full-height">
    <div class="card-header">
        <h3 class="d-inline-block">{{ 'users'|trans|capitalize }}</h3>
    </div>
    {% if users is defined %}
        <div class="card-list">
            {% for user in users %}
                <div class="item-list">
                    <div class="info-user ml-3">
                        <div class="username"><h4>{{ user.username|capitalize }}</h4></div>
                        <div class="status">{{ user.username }}</div>
                    </div>
                    <button class="btn btn-icon btn-primary btn-round btn-s"
                       style="margin-right: 5px"
                       data-toggle="modal"
                       data-target="#editUser{{ user.id }}">
                        <i class="fa fa-edit"></i>
                    </button>
                    <button class="btn btn-icon btn-danger btn-round btn-s"
                            style="margin-right: 15px"
                            data-toggle="modal"
                            data-target="#deleteUser{{ user.id }}">
                        <i class="fa fa-trash"></i>
                    </button>

                </div><!-- /.item-list -->
            {% endfor %}
        </div><!-- /.card-list -->
    {% endif %}

    <div class="card-body">
    </div> <!-- /.card-body -->

    <div class="card-action">
        <a class="btn btn-info btn-block" style="margin-right: 25px" href="#addUser" data-toggle="modal" data-target="#addUser">{{ 'add user'|trans|capitalize }}</a>
    </div><!-- /.card-action -->
</div><!-- /.card -->

{# the slugs modals #}
{% include 'uc/modals/user.html.twig'
    with {
    'route': 'app_uc_user',
    'resource':resource,
    'id':'addUser' } %}

{% if users is defined %}
    {% for user in users %}
        {% include 'widgets/delete_modal.html.twig'
            with {
            'route': 'app_uc_user',
            'resource':resource,
            'item':user,
            'id':'deleteUser' } %}

        {% include 'uc/modals/user.html.twig'
            with {
            'route': 'app_uc_user',
            'resource':resource,
            'item':user,
            'id':'editUser' } %}
    {% endfor %}
{% endif %}
