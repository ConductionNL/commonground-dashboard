{% extends "body.html.twig" %}

{% block content %}

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/components_header.html.twig' %}
            
            <div class="page-inner">
                <div class="row">
        			<div class="col-md-8">
                        <div class="row">                        
                        {% if component.resources is defined and component.resources is not empty %}	
				            {% for index,href in component.resources %}	
				            {% if index not in ['@context','@id','@type'] %}
                			<div class="col-md-4">
                				<a href="{{ path('app_component_resource',{'component':index,'resourcetype':href}) }}">
    							<div class="card card-stats card-round">
    								<div class="card-body ">
    									<div class="row align-items-center">
    										<div class="col-icon">
    											<div class="icon-big text-center icon-primary bubble-shadow-small">
    												<i class="{{ component.icon }}"></i>
    											</div>
    										</div>
    										<div class="col col-stats ml-3 ml-sm-0">
    											<div class="numbers">
    												<p class="card-category">Component</p>
    												<h4 class="card-title">{{ index }}</h4>
    											</div><!-- /.numbers -->
    										</div><!-- /.coll -->
    									</div><!-- /.row -->
    								</div><!-- /.card-body -->
    							</div><!-- /.card -->
    						</a>
                        	</div><!-- /.coll -->
                        {% endif %}{% endfor %}{% endif %}
                		</div><!-- /.row -->
                	</div><!-- /.coll -->
                	
        			<div class="col-md-4">
						<div class="card">							
    							<div class="card-header">
                                    <div class="card-head-row">
        								<div class="card-title">Settings</div>
                                        <div class="card-tools">
                                            <ul class="nav nav-pills nav-secondary nav-pills-no-bd nav-sm"
                                                id="pills-tab" role="tablist">
                                                
                                                <li class="nav-item">
                                                    <a class="nav-link succes" id="pills-all" 
                                                       href="#pills-today" >+</a>
                                                </li>
                                            </ul>
                                        </div><!-- /.card-tools -->
                                    </div><!-- /.card-head-row -->
    							</div><!-- /.card-header -->
    							<div class="card-body">			
    								<small class="form-text text-muted">Een kort overzicht van wat er voor dit component is geconfigureerd</small>	
    							</div><!-- /.card-body -->
						</div><!-- /.card -->
                	</div><!-- /.coll -->
        		</div><!-- /.row -->
        	</div><!-- /.page-inner -->
        </div><!-- /.container -->

        {% include 'footer.html.twig' %}

    </div><!-- /.main-panel -->

{% endblock %}