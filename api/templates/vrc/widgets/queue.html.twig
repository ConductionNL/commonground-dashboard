
<div class="card full-height">
    <div class="card-header">
        <h2 class="d-inline-block">{{ 'queue'|trans|capitalize }}</h2>
    </div>

    {% if queues is defined %}
        <div class="card-list">
            {% for queue in queues %}
                <div class="item-list">
                    <div class="info-user ml-3">
                        <div class="name"><h4>{{ memo.name|capitalize }}</h4></div>
                        <div class="description">{{ queue.status }}</div>
                    </div>
                    <a class="btn btn-icon btn-primary btn-round btn-s"
                       style="margin-right: 5px"
                       href="{{ path('app_memo_memo', {id: queue.id}) }}">
                        <i class="fa fa-edit" style="margin: 12px !important;"></i>
                    </a>
                    <button class="btn btn-icon btn-danger btn-round btn-s"
                            style="margin-right: 15px" data-toggle="modal"
                            data-target="#deleteQueue{{ queue.id }}">
                        <i class="fa fa-trash"></i>
                    </button>
                </div><!-- /.item-list -->
            {% endfor %}
        </div><!-- /.card-list -->
    {% endif %}

    <div class="card-body">
    </div> <!-- /.card-body -->
</div>
