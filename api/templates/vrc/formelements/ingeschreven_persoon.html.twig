
<div class="form-group">
    <label class="input__label" for="bsn-{{ property.id }}">{{ 'bsn number' }}</label>
    <input class="form-control mb-3" id="bsn-{{ property.id }}" type="text">

    <button type="button" onclick="getBsn()" class="btn btn-info">Zoeken</button>

</div>

<hr style="margin-top: 20px;">


<div class="form-control" id="list-{{ property.id }}" style="margin-top: 20px; margin-bottom: 20px; display: none">

</div>
<input type="hidden" value="{{ property.name }}" name="newPropName">


<script>
    function getBsn(){
        $('#list-{{ property.id }}').show();
        let bsn = document.getElementById('bsn-{{ property.id }}').value;


        let list = document.getElementById('list-{{ property.id }}');
        while(list.firstChild){
            list.firstChild.remove();
        }



        $.ajax({
            url: "/api/brp/ingeschrevenpersonen",
            type: 'GET',
            processData: true,
            headers: {
                Accept: 'application/ld+json'
            },
            data: { burgerservicenummer:bsn },
            statusCode: {
                404: function() {
                    console.log( "page not found" );
                },
                500: function() {
                    console.log( "internal server error" );
                },
                200: function() {
                    console.log( "worked" );
                }
            },
            success: function(result) {

                $('#spinner').hide();
                if(result["hydra:member"].length >= 1){
                    $('#list-{{ property.id }}').append('<legend class="input__legend">Persoon:</legend>')
                    for(let i = 0; i < result['hydra:member'].length; i++){
                        if(result['hydra:member'][i]['huisnummertoevoeging'] === null){
                            result['hydra:member'][i]['huisnummertoevoeging'] = '';
                        }

                        $('#list-{{ property.id }}').append('<input value="'+ result["hydra:member"][i]['burgerservicenummer'] +'" type="radio" name="newProp" style="margin-right: 5px" id="'+i+'">');
                        $('#list-{{ property.id }}').append('<label class="input__label input__label--radio" for="'+i+'"> '
                            + result["hydra:member"][i]["naam"]['voornamen']
                            + ' '
                            + result["hydra:member"][i]["naam"]['geslachtsnaam']
                            + '</label>');
                    }
                } else {
                    $('#list-{{ property.id }}').append('<p>Geen persoon gevonden op meegegeven bsn</p>');
                }
            },
        });

    }


</script>
