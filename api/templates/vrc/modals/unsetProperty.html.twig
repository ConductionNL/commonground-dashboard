<div class="modal fade" style="text-align: center" id="unsetProperty{{ id }}" tabindex="-1"
     role="dialog"
     aria-labelledby="{{ id }}Title" aria-hidden="true">
    <div class="modal-dialog model-dialog-centered" role="document">
        <div class="modal-content">
            <form action="{{ path(route, {id: resource.id}) }}" method="post">
                <div class="modal-header">
                    <h4 class="modal-title" id="{{ id }}Title"><b>{{ 'unset property'|trans|capitalize }}</b></h4>
                    <button type="button" class="close" data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-dialog">
                    {{ 'are you sure that you want to unset'|trans|capitalize }}:  {{ property.title }}?
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger mx-auto">
                        {{ 'yes'|trans|capitalize }}
                    </button>
                    <button type="button" class="btn btn-secondary mx-auto" data-dismiss="modal">{{ 'no'|trans|capitalize }}</button>

                    <input type="hidden" id="property" name="unsetProp" value="{{ property.name }}">


                </div>
            </form>
        </div>
    </div>
</div>
