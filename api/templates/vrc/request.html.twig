{% extends "body.html.twig" %}

{% block content %}

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' with {
                'headerTitle': 'save or create a request',
                'name' : resource.name,
                'breadcrumbs': [{
                    'home' : {
                        'name' : 'home',
                        'path' : 'app_default_index'
                    },
                    'requests' : {
                        'name' : 'requests',
                        'path' : 'app_vrc_requests'
                    }
                }]
            }
            %}
            <div class="page-inner">
                <div class="row">
                    <div style="margin-top: -50px;" class="col-md-12">
                        <div class="card p-4 full-height">
                        	<form action="{{ path('app_vrc_request', {'id': resource.id}) }}" method="post">
                                <div class="card-header">
                                    <h2 class="d-inline-block">{{ resource.reference }}  {% if resource.parent is defined and resource.parent is not empty %} {{ 'belongs to'|trans|capitalize }} <a href="{{ path('app_vrc_request', {'id': resource.parent.id}) }}">{{ resource.parent.reference }}</a> {% endif %}</h2>
                                        <div class="float-right">
                                            <a class="btn btn-primary mr-4" href="{{ path('app_vrc_requests')}}"><i class="far fa-window-close mr-2"></i>{{ 'cancel'|trans|capitalize }}</a>
                                            <a href="#changeLog" class="btn btn-info" style="margin-right: 25px"
                                               data-toggle="modal"
                                               data-target="#changeLog"><i class="far fa-file-alt mr-2"></i>{{ 'change log'|trans|capitalize }}</a>
                                            <a href="#auditTrial" class="btn btn-info" style="margin-right: 25px"
                                               data-toggle="modal"
                                               data-target="#auditTrial"><i class="fas fa-list mr-2"></i>{{ 'audit trail'|trans|capitalize }}</a>
                                            <a href="#deleteApplication" class="btn btn-danger" style="margin-right: 25px"
                                               data-toggle="modal"
                                               data-target="#deleteApplication"><i class="far fa-trash-alt mr-2"></i>{{ 'delete'|trans|capitalize }}</a>
                                            <button class="btn btn-success"><i class="far fa-save mr-2"></i>{{ 'save'|trans|capitalize }}</button>
                                        </div>
                                </div>
								<div class="card-body">
									<div class="row">
        								<div class="col-md-3 col-sm-12">
        									<div class="form-group">
        										<label for="largeInput">{{ 'case'|trans|capitalize }}</label>
                                                {% if resource.cases is defined and resource.cases|length >0  %}
        										    <input type="text" class="form-control form-control-lg"  value="{% if resource.cases is defined %}{{ resource.cases[0] }}{% endif %}" disabled="">
                                                {% else %}
                                                    {% if resource.organization is defined and resource.requestType is defined %}<a class="btn btn-info btn-block" style="margin-right: 25px" href="#addCase"  data-toggle="modal" data-target="#addCase">{{ 'add case'|trans|capitalize }}</a>{% endif %}
                                                {% endif %}
        									</div>
    									</div> <!-- /.col -->
    									<div class="col-md-3 col-sm-12">
        									<div class="form-group">
        										<label for="largeInput">{{ 'organization'|trans|capitalize }}</label>
        										<select id="organization" name="organization" class="form-control form-control-lg" {% if resource.organization is defined and resource.organization is not empty %}disabled{% endif %}>
        										 {% for organization in organizations %}
                                               		<option value="{{ organization['@id'] }}" {% if resource.organization is defined and organization['@id'] == resource.organization  %}selected=""{% endif %}>{{ organization.name }}</option>
                                                {% endfor %}
                                                </select>
        									</div><!-- /.form-group -->
        								</div> <!-- /.col -->
                                        <div class="col-md-3 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'type'|trans|capitalize }}</label>
                                                <select id="requestType" name="requestType" class="form-control form-control-lg" {% if resource.requestType is defined and resource.requestType is not empty %}disabled{% endif %}>
                                                    {% for value in requestTypes %}
                                                        <option value="{{ value['@id'] }}" {% if resource.requestType is defined and value['@id'] == resource.organization  %}selected{% endif %}>{{ value.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div><!-- /.form-group -->
                                        </div> <!-- /.col -->
                                        <div class="col-md-3 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'status'|trans|capitalize }}</label>
                                                <select id="status" name="status" class="form-control form-control-lg">
                                                    <option value="incomplete" {% if resource.status is defined and 'incomplete ' == resource.status  %}selected{% endif %}>{{ 'incomplete'|trans|capitalize }}</option>
                                                    <option value="complete" {% if resource.status is defined and 'complete ' == resource.status  %}selected{% endif %}>{{ 'complete'|trans|capitalize }}</option>
                                                    <option value="submitted" {% if resource.status is defined and 'submitted ' == resource.status  %}selected{% endif %}>{{ 'submitted'|trans|capitalize }}</option>
                                                    <option value="processed" {% if resource.status is defined and 'processed ' == resource.status  %}selected{% endif %}>{{ 'processed'|trans|capitalize }}</option>
                                                </select>
                                            </div><!-- /.form-group -->
                                        </div> <!-- /.col -->
    								</div><!-- /.row -->

								</div> <!-- /.card-body -->

								<div class="card-action">
                                    {% if resource.dateCreated is defined and resource.dateModified  is defined %}{{ 'created at'|trans|capitalize }} {{ resource.dateCreated|date("d-m-Y H:i:s", "Europe/Paris") }} | {{ 'last updated add'|trans|capitalize }}{{ resource.dateModified|date("d-m-Y H:i:s", "Europe/Paris") }}{% endif %}
								</div><!-- /.card-action -->
                            </form>
                        </div><!-- /.card -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
                <div class="row">
                    <div class="col-md-4">
                        {% include 'vrc/widgets/properties.html.twig'
                            with {
                            'properties': resource.properties } %}

                    </div><!-- /.col -->
                    <div class="col-md-4">
                        {% include 'vrc/widgets/submitters.html.twig'
                            with {
                            'submitters': resource.submitters } %}
                    </div><!-- /.col -->
                    <div class="col-md-4">
                        {% include 'vrc/widgets/children.html.twig'
                            with {
                            'children': resource.children } %}
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.page-inner -->
            {% include 'widgets/delete_modal.html.twig'
                with {
                'route': 'app_vrc_request',
                'resource':resource,
                'id':'delete' } %}

            {% include 'widgets/auditTrail_modal.html.twig'
                with {
                'route': 'app_vrc_request',
                'resource':resource,
                'id':'auditTrial' } %}

            {% include 'widgets/changeLog_modal.html.twig'
                with {
                'route': 'app_vrc_request',
                'resource':resource,
                'id':'changeLog' } %}

            {% include 'footer.html.twig' %}
        </div>
    </div>







    {% block javascript %}
    //audit_trails
    $.ajax({
        url: "/api/vrc/audit_trails",
        type: 'GET',
        dataType: 'json',
        success: function(result) {
            for(let i = 0; i < result['hydra:member'].length; i++ ){
                $('#audit').append('<tr>')
                $('#audit').append("<td>" + result['hydra:member'][i]['method'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['user'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['ip'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['session'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['dateCreated'] + "</td>");
                $('#audit').append('</tr>')
            }
        },
    });
    //change_logs
    $.ajax({
        url: "/api/vrc/change_logs",
        type: 'GET',
        dataType: 'json',
        success: function(result) {
            console.log(result);
            for(let i = 0; i < result['hydra:member'].length; i++ ){
                $('#changelog').append('<tr>')
                $('#changelog').append("<td>" + result['hydra:member'][i]['version'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['action'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['username'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['data'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['dateCreated'] + "</td>");
                $('#changelog').append('</tr>')
            }
        },
    });
    {% endblock %}
{% endblock %}
