{% extends "body.html.twig" %}

{% set view = 'app_bs_messages' %}

{% block content %}

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' with {
                'headerTitle': 'messages',
                'name' : 'messages'|capitalize,
                'breadcrumbs': [{
                    'home' : {
                        'name' : 'home',
                        'path' : 'app_default_index'
                    }
                }]
            }
            %}
            <div style="margin-top: -25px;" class="col-md-12">
                <div class="card full-height">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'status'|trans|capitalize }}</th>
                            <th scope="col">{{ 'reciever'|trans|capitalize }}</th>
                            <th scope="col">{{ 'sender'|trans|capitalize }}</th>
                            <th scope="col">{{ 'service'|trans|capitalize }}</th>
                            <th scope="col">{{ 'created'|trans|capitalize }}</th>
                            <th scope="col">{{ 'modified'|trans|capitalize }}</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for resource in resources %}
                        <tr>
                            <td>{{ resource.status }}</td>
                            <td>{{ commonground_resource(resource.reciever).name }}</td>
                            <td>{{ commonground_resource(resource.sender).name }}</td>
                            <td>{{ resource.service.type }}</td>
                            <td>{{ resource.dateCreated|date("d-m-Y H:i:s", "Europe/Paris") }}</td>
                            <td>{{ resource.dateModified|date("d-m-Y H:i:s", "Europe/Paris") }}</td>
                            <td><a style="background: #cfebfd; padding: 6px; border-radius: 6px" href="{{ path(view, {id: resource.id}) }}"><b>{{ 'edit'|trans|capitalize }}</b></a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>


        </div>

        {% include 'footer.html.twig' %}

    </div>
{% endblock %}
