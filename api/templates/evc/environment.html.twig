{% extends "body.html.twig" %}

{% block content %}

    <style>
        th {
            width: 33.33%;
        }
    </style>

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' with {
                'headerTitle': 'environment',
                'name' : resource.name,
                'breadcrumbs': [{
                    'home' : {
                        'name' : 'home',
                        'path' : 'app_default_index'
                    },
                    'environments' : {
                        'name' : 'environments',
                        'path' : 'app_evc_environments'
                    }
                }]
            }
            %}
            <div class="page-inner">
                <div class="row">

                    <div style="margin-top: -50px;" class="col-md-12">
                        <div class="card p-4 full-height">
                            <form action="{{ path('app_evc_environment', {id: resource.id}) }}" method="post">
                                <div class="card-header">
                                    <h2 class="d-inline-block">{{ resource.name }} </h2>
                                    <div class="float-right">
                                        {% if resource.cluster is defined %}
                                            <a class="btn btn-primary mr-4" href="{{ path('app_evc_cluster', {id:resource.cluster.id})}}"><i class="fas fa-long-arrow-alt-left"></i> {{ 'cluster'|trans|capitalize }}</a>
                                        {% endif %}
                                        <button class="btn btn-info mr-4 dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><span class="btn-label"><i class="fas fa-cog mr-2"></i></span>{{ 'options'|trans|capitalize }}</button>
                                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(710px, 43px, 0px); top: 0px; left: 0px; will-change: transform;">
                                            <a href="#changeLog" class="dropdown-item text" style="margin-right: 25px"
                                               data-toggle="modal"
                                               data-target="#changeLog"><i class="far fa-file-alt mr-2"></i>{{ 'change log'|trans|capitalize }}</a>
                                            <a href="#auditTrial" class="dropdown-item text" style="margin-right: 25px"
                                               data-toggle="modal"
                                               data-target="#auditTrial"><i class="fas fa-list mr-2"></i>{{ 'audit trail'|trans|capitalize }}</a>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <a href="#delete" class="dropdown-item text-danger" style="margin-right: 25px"
                                               data-toggle="modal"
                                               data-target="#delete"><i class="far fa-trash-alt mr-2"></i>{{ 'delete'|trans|capitalize }}</a>
                                        </div>
                                        <button class="btn btn-success"><i class="far fa-save mr-2"></i>{{ 'save'|trans|capitalize }}</button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'name'|trans|capitalize }}</label>
                                                <input type="text" class="form-control form-control-lg" id="name"
                                                       name="name" placeholder=""
                                                       value="{% if resource.name is defined %}{{ resource.name }} {% endif %}">
                                            </div>
                                        </div> <!-- /.col -->
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'cluster'|trans|capitalize }}</label>
                                                <select name="cluster" id="cluster" class="form-control form-control-lg" required>
                                                    {
                                                    {% for cluster in clusters %}
                                                        <option value="{{ cluster['@id']}} "{% if resource.cluster is defined and resource.cluster['@id'] == cluster['@id']  %}selected{% endif %}>{{ cluster.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div> <!-- /.col -->
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'authorization'|trans|capitalize }}</label>
                                                <input type="text" class="form-control form-control-lg" id="authorization"
                                                       name="authorization" placeholder=""
                                                       {% if resource.id != 'new' %}readonly{% endif %}
                                                       value="{% if resource.authorization is defined %}{{ resource.authorization }} {% endif %}">
                                            </div>
                                        </div> <!-- /.col -->
                                    </div><!-- /.row -->
                                    <div class="row">
                                        <div class="col-md-3 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'debug'|trans|capitalize }}</label>
                                                <div class="ml-2 form-check">
                                                    <input class="form-check-input" type="radio" name="debug" id="debug off" value="0" {% if resource.debug is defined and resource.debug == 0 %}checked{% endif %}>
                                                    <label class="form-check-label" for="debug off">{{ 'no'|trans|capitalize }}</label>
                                                </div>
                                                <div class="ml-2 form-check">
                                                    <input class="form-check-input" type="radio" name="debug" id="debug on" value="1"{% if resource.debug is defined and resource.debug == 1 %}checked{% endif %}>
                                                    <label class="form-check-label" for="debug on">{{ 'yes'|trans|capitalize }}</label>
                                                </div>
                                            </div><!-- /.form-group -->
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-check-label">
                                                    <label  for="largeInput">{{ 'cache'|trans|capitalize }}</label>
                                                </div>
                                                <div class="ml-2 form-check">
                                                    <input class="form-check-input" type="radio" name="cache" id="cache off" value="0" {% if resource.cache is defined and resource.cache == 0 %}checked{% endif %}>
                                                    <label class="form-check-label" for="cache off">{{ 'no'|trans|capitalize }}</label>
                                                </div>
                                                <div class="ml-2 form-check">
                                                    <input class="form-check-input" type="radio" name="cache" id="cache on" value="1" {% if resource.cache is defined and resource.cache == 1 %}checked{% endif %}>
                                                    <label class="form-check-label" for="cache on">{{ 'yes'|trans|capitalize }}</label>
                                                </div>
                                            </div><!-- /.form-group -->
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'exposed backend'|trans|capitalize }}</label>
                                                <div class="ml-2 form-check">
                                                    <input class="form-check-input" type="radio" name="web" id="web off" value="0" {% if resource.web is defined and resource.web == 0 %}checked{% endif %}>
                                                    <label class="form-check-label" for="cache off">{{ 'no'|trans|capitalize }}</label>
                                                </div>
                                                <div class="ml-2 form-check">
                                                    <input class="form-check-input" type="radio" name="web" id="web on" value="1" {% if resource.web is defined and resource.web == 1 %}checked{% endif %}>
                                                    <label class="form-check-label" for="cache on">{{ 'yes'|trans|capitalize }}</label>
                                                </div>
                                            </div><!-- /.form-group -->
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'description'|trans|capitalize }}</label>
                                                <textarea class="form-control summernote" rows="5" id="description" name=description>{% if resource.description is defined %}{{ resource.description }}{% endif %}</textarea>
                                            </div>
                                        </div>  <!-- /.col -->
                                    </div> <!-- /.row -->
                                </div> <!-- /.card-body -->

                                <div class="card-action">
                                    {% if resource.dateCreated is defined and resource.dateModified  is defined %}{{ 'created at'|trans|capitalize }} {{ resource.dateCreated|date("d-m-Y H:i:s", "Europe/Paris") }} | {{ 'last updated add'|trans|capitalize }}{{ resource.dateModified|date("d-m-Y H:i:s", "Europe/Paris") }}{% endif %}
                                </div><!-- /.card-action -->
                            </form>
                        </div><!-- /.card -->
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card p-4 full-height">
                            <div class="card-header">
                                <h3 class="d-inline-block">{{ 'installations'|trans|capitalize }}</h3>
                                <div class="float-right">
                                    <a class="btn btn-info btn-block" style="margin-right: 25px" href="#addInstallation"  data-toggle="modal" data-target="#addInstallation">{{ 'add installation'|trans|capitalize }}</a>
                                </div>
                            </div>
                            <div class="card-body mb-5">
                                {% if resource.installations is defined %}
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">{{ 'name'|trans|capitalize }}</th>
                                                <th scope="col">{{ 'deployment name'|trans|capitalize }}</th>
                                                <th scope="col">{{ 'environment'|trans|capitalize }}</th>
                                                <th scope="col">{{ 'dateCreated'|trans|capitalize }}</th>
                                                <th scope="col">{{ 'dateInstalled'|trans|capitalize }}</th>
                                                <th scope="col"></th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for installation in resource.installations %}
                                                    <tr>
                                                        <td>{{ installation.name }}</td>
                                                        <td>{{ installation.deploymentName }}</td>
                                                        <td>{% if installation.environment is defined %}{{ resource.name }}{% endif %}</td>
                                                        <td>{% if installation.environment is defined %}{{ installation.dateCreated }} {% endif %}</td>
                                                        <td>{% if installation.environment is defined %}{{ installation.dateInstalled }}{% else %}{{ 'pending'|trans|capitalize }}{% endif %}</td>
                                                        <td>
                                                            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><span class="btn-label"><i class="fas fa-cog mr-2"></i></span>{{ 'edit'|trans|capitalize }}</button>
                                                            <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(710px, 43px, 0px); top: 0px; left: 0px; will-change: transform;">
                                                                <a class="dropdown-item" style="margin-right: 25px" href="#editInstallation{{ installation.id }}"  data-toggle="modal" data-target="#editInstallation{{ installation.id }}">{{ 'edit'|trans|capitalize }}</a>
                                                                {% if installation.dateInstalled != null %}
                                                                    <a class="dropdown-item" style="margin-right: 25px" href="{{ path('app_evc_installation', {'id': installation.id, 'action':'upgrade'}) }}">{{ 'upgrade'|trans|capitalize }}</a>
                                                                    <a class="dropdown-item" style="margin-right: 25px" href="{{ path('app_evc_installation', {'id': installation.id, 'action':'rollingupdate'}) }}">{{ 'rolling update'|trans|capitalize }}</a>
                                                                {% else %}
                                                                    <a class="dropdown-item" style="margin-right: 25px" href="{{ path('app_evc_installation', {'id': installation.id, 'action':'install'}) }}">{{ 'install'|trans|capitalize }}</a>
                                                                {% endif %}
                                                                <div role="separator" class="dropdown-divider"></div>
                                                                <a class="dropdown-item text-danger" style="margin-right: 25px" href="{{ path('app_evc_installation', {'id': installation.id, 'action':'uninstall'}) }}">{{ 'uninstall'|trans|capitalize }}</a>

                                                            </div>
                                                        </td>
                                                    </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    {% endif %}
                                </div>
                        </div>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.row -->
        </div><!-- /.page-inner -->


        <div class="modal fade" style="text-align: center" id="addInstallation" tabindex="-1"
             role="dialog"
             aria-labelledby="addInstallationTitle" aria-hidden="true">
            <div class="modal-dialog model-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addInstallationTitle"><b>{{ 'add installation'|trans|capitalize }}</b></h5>
                        <button type="button" class="close" data-dismiss="modal"
                                aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="{{ path('app_evc_environment', {id: resource.id}) }}" method="post">
                        <div class="form-group">
                            <label for="largeInput">{{ 'name'|trans|capitalize }}</label>
                            <input type="text" class="form-control form-control-lg" id="installation[name]" name="installation[name]" value="" required>
                        </div><!-- /.form-group -->
                        <div class="form-group">
                            <label for="largeInput">{{ 'deployment name'|trans|capitalize }}</label>
                            <input type="text" class="form-control form-control-lg" id="installation[deploymentName]" name="installation[deploymentName]" value="" placeholder="">
                            <small class="form-text text-muted">{{ 'only fill in this form if you want another instance of an installed component. if you enter for example: \'db-test\'.'|trans|capitalize}} <br> {{ 'the url will become: \'db-test.domain\'.'|trans }}</small>
                        </div><!-- /.form-group -->
                        <div class="form-group">
                            <label for="largeInput">{{ 'description'|trans|capitalize }}</label>
                            <input type="text" class="form-control form-control-lg" id="installation[description]" name="installation[description]" value="">
                        </div><!-- /.form-group -->
                        <div class="form-group">
                            <label for="">{{ 'domain'|trans|capitalize }}</label>
                            <select id="installation[domain]" name="installation[domain]" class="form-control form-control-lg">
                                {% if resource.cluster.domains is defined %}
                                    {% for domain in resource.cluster.domains %}
                                        <option value="{{ domain['@id'] }}">{{ domain.name }}</option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                        </div><!-- /.form-group -->
                        <div class="form-group">
                            <label for="">{{ 'environment'|trans|capitalize }}</label>
                            <select id="installation[environment]" name="installation[environment]" class="form-control form-control-lg">
                                <option value="{{ resource['@id'] }}">{{ resource.name }}</option>
                            </select>
                        </div><!-- /.form-group -->
                        <div class="form-group">
                            <label for="">{{ 'component'|trans|capitalize }}</label>
                            <select id="installation[component]" name="installation[component]" class="form-control form-control-lg">
                                <option value="">{{ 'none'|trans|capitalize }}</option>
                                {% if components is defined %}
                                    {% for component in components %}
                                        <option value="{{ component['@id'] }}">{{ component.name }}</option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                        </div><!-- /.form-group -->
                        <div class="form-group">
                            <label for="">{{ 'helm version'|trans|capitalize }}</label>
                            <select id="installation[helmVersion]" name="installation[helmVersion]" class="form-control form-control-lg">
                                <option value="">{{ 'default'|trans|capitalize }}</option>
                                <option value="2.12.3">2.12.3</option>
                                <option value="2.14.3">2.14.3</option>
                                <option value="2.16.6">2.16.6</option>
                            </select>
                        </div><!-- /.form-group -->
                        <button type="submit" class="btn btn-success m-3  mx-auto">
                            {{ 'add'|trans|capitalize }}
                        </button>
                    </form>
                </div>
            </div>
        </div>

        {% if resource.installations is defined %}
            {% for installation in resource.installations %}
                <div class="modal fade" style="text-align: center" id="editInstallation{{ installation.id }}" tabindex="-1"
                     role="dialog"
                     aria-labelledby="editInstallationTitle" aria-hidden="true">
                    <div class="modal-dialog model-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editInstallationTitle"><b>{{ 'edit installation'|trans|capitalize }}</b></h5>
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            {#                                {{ dump(installation) }}#}
                            <form action="{{ path('app_evc_environment', {id: resource.id}) }}" method="post">
                                <div class="form-group">
                                    <label for="largeInput">{{ 'name'|trans|capitalize }}</label>
                                    <input type="text" class="form-control form-control-lg" id="installation[name]" name="installation[name]" value="{{ installation.name }}" required>
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                    <label for="largeInput">{{ 'deployment name'|trans|capitalize }}</label>
                                    <input type="text" class="form-control form-control-lg" id="installation[deploymentName]" name="installation[deploymentName]" value="{{ installation.deploymentName }}">
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                    <label for="largeInput">{{ 'description'|trans|capitalize }}</label>
                                    <input type="text" class="form-control form-control-lg" id="installation[description]" name="installation[description]" value="{{ installation.description }}">
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                    <label for="">{{ 'domain'|trans|capitalize }}</label>
                                    <select id="installation[domain]" name="installation[domain]" class="form-control form-control-lg">
                                        {% if resource.cluster.domains is defined %}
                                            {% for domain in resource.cluster.domains %}
                                                <option value="{{ domain['@id'] }}">{{ domain.name }}</option>
                                            {% endfor %}
                                        {% endif %}
                                    </select>
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                    <label for="">{{ 'environment'|trans|capitalize }}</label>
                                    <select id="installation[environment]" name="installation[environment]" class="form-control form-control-lg">
                                        <option value="{{ resource['@id'] }}">{{ resource.name }}</option>
                                    </select>
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                    <label for="">{{ 'component'|trans|capitalize }}</label>
                                    <select id="installation[component]" name="installation[component]" class="form-control form-control-lg">
                                        <option value="">{{ 'none'|trans|capitalize }}</option>
                                        {% if components is defined %}
                                            {% for component in components %}
                                                <option value="{{ component['@id'] }}" {% if installation.component is defined and component['@id'] == installation.component['@id'] %} selected=""{% endif %}>{{ component.name }}</option>
                                            {% endfor %}
                                        {% endif %}
                                    </select>
                                </div><!-- /.form-group -->
                                <input type="hidden" id="installation[@id]" name ="installation[id]" value="{{ installation['@id'] }}">
                                <input type="hidden" id="installation[cluster]" name ="installation[cluster]" value="{{ resource['@id'] }}">
                                <button type="submit" class="btn btn-success m-3  mx-auto">
                                    {{ 'edit'|trans|capitalize }}
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}




        {% include 'widgets/delete_modal.html.twig'
            with {
            'route': 'app_evc_environment',
            'resource':resource,
            'id':'delete' } %}

        {% include 'widgets/auditTrail_modal.html.twig'
            with {
            'route': 'app_evc_environment',
            'resource':resource,
            'id':'auditTrial' } %}

        {% include 'widgets/changeLog_modal.html.twig'
            with {
            'route': 'app_evc_environment',
            'resource':resource,
            'id':'changeLog' } %}


        {% include 'footer.html.twig' %}

    </div>
    </div>
    <script>
    {% block javascript %}
    //audit_trails
    $.ajax({
        url: "/api/evc/audit_trails",
        type: 'GET',
        dataType: 'json',
        success: function(result) {
            for(let i = 0; i < result['hydra:member'].length; i++ ){
                $('#audit').append('<tr>')
                $('#audit').append("<td>" + result['hydra:member'][i]['method'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['user'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['ip'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['session'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['dateCreated'] + "</td>");
                $('#audit').append('</tr>')
            }
        },
    });
    //change_logs
    $.ajax({
        url: "/api/evc/change_logs",
        type: 'GET',
        dataType: 'json',
        success: function(result) {
            console.log(result);
            for(let i = 0; i < result['hydra:member'].length; i++ ){
                $('#changelog').append('<tr>')
                $('#changelog').append("<td>" + result['hydra:member'][i]['version'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['action'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['username'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['data'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['dateCreated'] + "</td>");
                $('#changelog').append('</tr>')
            }
        },
    });
    {% endblock %}
    </script>
{% endblock %}
