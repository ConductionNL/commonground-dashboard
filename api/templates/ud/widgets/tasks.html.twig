<div class="card p-4 full-height">
    <div class="card-header">
        <h3 class="d-inline-block">{{ 'tasks'|trans|capitalize }}</h3>
    </div>

    {% if tasks is defined %}
        <div class="card-list">

                <div class="item-list">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'name'|trans|capitalize }}</th>
                            <th scope="col">{{ 'description'|trans|capitalize }}</th>
                            <th scope="col">{{ 'status'|trans|capitalize }}</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for task in tasks %}
                            <tr>
                                <td><a href="{{ path('app_vrc_request', {id: request.id}) }}">{{ task.name }}</a></td>
                                <td>{{ task.description }}</td>
                                <td>{{ task.status }}</td>

                            </tr><!-- /.card-list -->
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.item-list -->

        </div><!-- /.card-list -->
    {% endif %}

    <div class="card-body">
    </div> <!-- /.card-body -->


</div><!-- /.card -->
