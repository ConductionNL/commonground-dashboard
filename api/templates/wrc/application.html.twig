{% extends "body.html.twig" %}

{% block content %}

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' %}

            <div class="page-inner">
                <div class="row">
                    <div style="margin-top: -50px;" class="col-md-12">
                        <div class="card p-4 full-height">
                        	<form action="{{ path('app_wrc_application', {'id': resource.id}) }}" method="post">
                                <div class="card-header">
                                    <h2 class="d-inline-block">{{ resource.name }} </h2>
                                    <div class="float-right">
                                        <a href="#deleteApplication" class="btn btn-danger" style="margin-right: 25px" data-toggle="modal" data-target="#deleteApplication">{{ 'delete'|trans|capitalize }}</a>
                                        <button class="btn btn-success">{{ 'save'|trans|capitalize }}</button>
                                    </div>
                                </div>
								<div class="card-body">
									<div class="row">
        								<div class="col-md-4 col-sm-12">
        									<div class="form-group">
        										<label for="largeInput">{{ 'name'|trans|capitalize }}</label>
        										<input type="text" class="form-control form-control-lg" id="name" name ="name" value="{% if resource.name is defined %}{{ resource.name }}{% endif %}" required>
        									</div>
    									</div> <!-- /.col -->
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'id'|trans|capitalize }}</label>
                                                <input type="text" class="form-control form-control-lg" value="{% if resource.id is defined %}{{ resource.id }}{% endif %}" disabled>
                                            </div>
                                        </div> <!-- /.col -->
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'domain'|trans|capitalize }}</label>
                                                <input type="text" class="form-control form-control-lg" id="domain" name ="domain" value="{% if resource.domain is defined %}{{ resource.domain }}{% endif %}" required>
                                            </div>
                                        </div> <!-- /.col -->
    								</div><!-- /.row -->
                                    <div class="row">
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label for="style">{{ 'style'|trans|capitalize }}</label>
                                                <select id="style" name="style" class="form-control form-control-lg" {% if styles is not defined %}disabled{% endif %} >
                                                {% if styles is defined %}
                                                    {% for style in styles %}
                                                        <option value="{{ style['@id'] }}" {% if resource.style is defined and resource.style is not empty and style['@id'] == resource.style['@id']  %}selected=""{% endif %}>{{ style.name }}</option>
                                                    {% endfor %}
                                                {% endif %}
                                                </select>
                                            </div>
                                        </div> <!-- /.col -->
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label for="defaultConfiguration">{{ 'default configuration'|trans|capitalize }}</label>
                                                <select id="defaultConfiguration" name="defaultConfiguration" class="form-control form-control-lg" {% if configurations is not defined %}disabled{% endif %}>
                                                {% if configurations is defined %}
                                                    {% for configuration in configurations %}
                                                        <option value="{{ configuration['@id'] }}" {% if resource.defaultConfiguration is defined and  resource.defaultConfiguration is not empty and  configuration['@id'] == resource.defaultConfiguration['@id']  %}selected=""{% endif %}>{{ configuration.name }}</option>
                                                    {% endfor %}
                                                {% endif %}
                                                </select>
                                            </div>
                                        </div> <!-- /.col -->
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'organization'|trans|capitalize }}</label>
                                                <select id="organization" name="organization" class="form-control form-control-lg" required>
