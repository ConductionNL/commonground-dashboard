<div class="card p-4 full-height">
    <div class="card-header">
        <h3 class="d-inline-block">{{ 'slugs'|trans|capitalize }}</h3>
    </div>
    {% if slugs is defined %}
        <div class="card-list">
            {% for slug in slugs %}
                <div class="item-list">
                    <div class="info-user ml-3">
                        <div class="username"><h4>{{ slug.name|capitalize }}</h4></div>
                        <div class="status">{{ slug.slug }}</div>
                    </div>
                    <button class="btn btn-icon btn-primary btn-round btn-s"
                       style="margin-right: 5px"
                       data-toggle="modal"
                       data-target="#editSlug{{ slug.id }}">
                        <i class="fa fa-edit"></i>
                    </button>
                    <button class="btn btn-icon btn-danger btn-round btn-s"
                            style="margin-right: 15px"
                            data-toggle="modal"
                            data-target="#deleteSlug{{ slug.id }}">
                        <i class="fa fa-trash"></i>
                    </button>

                </div><!-- /.item-list -->
            {% endfor %}
        </div><!-- /.card-list -->
    {% endif %}

    <div class="card-body">
    </div> <!-- /.card-body -->

    <div class="card-action">
        <a class="btn btn-info btn-block" style="margin-right: 25px" href="#addSlug"  data-toggle="modal" data-target="#addSlug">{{ 'add slug'|trans|capitalize }}</a>
    </div><!-- /.card-action -->
</div><!-- /.card -->

{# the slugs modals #}
{% include 'wrc/modals/slug.html.twig'
    with {
    'route': 'app_wrc_template',
    'resource':resource,
    'id':'addSlug' } %}

{% if slugs is defined %}
    {% for slug in slugs %}
        {% include 'widgets/delete_modal.html.twig'
            with {
            'route': 'app_wrc_slug',
            'resource':resource,
            'item':slug,
            'id':'deleteSlug' } %}

        {% include 'wrc/modals/slug.html.twig'
            with {
            'route': 'app_wrc_template',
            'resource':resource,
            'item':slug,
            'id':'editSlug' } %}
    {% endfor %}
{% endif %}
