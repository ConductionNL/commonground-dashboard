{% extends "body.html.twig" %}

{% set view = 'app_wrc_menu' %}

{% block content %}

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' %}

            <div style="margin-top: -25px;" class="col-md-12">
                <div class="card full-height">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'name'|trans|capitalize }}</th>
                            <th scope="col">{{ 'application'|trans|capitalize }}</th>
                            <th scope="col">{{ 'items'|trans|capitalize }}</th>
                            <th scope="col">{{ 'created'|trans|capitalize }}</th>
                            <th scope="col">{{ 'modified'|trans|capitalize }}</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for resource in resources %}
                        <tr>
                            <td>{{ resource.name }}</td>
                            <td><a href="{{ path('app_wrc_application', {id: resource.application.id}) }}">{{ resource.application.name }}</a></td>
                            <td>{{ resource.menuItems|length }}</td>
                            <td>{{ resource.dateCreated|date("d-m-Y H:i:s", "Europe/Paris") }}</td>
                            <td>{{ resource.dateModified|date("d-m-Y H:i:s", "Europe/Paris") }}</td>
                            <td><a style="background: #cfebfd; padding: 6px; border-radius: 6px" href="{{ path(view, {id: resource.id}) }}"><b>{{ 'edit'|trans|capitalize }}</b></a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>


        </div>

        {% include 'footer.html.twig' %}

    </div>

{% endblock %}
