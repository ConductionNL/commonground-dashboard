{% extends "body.html.twig" %}

{% block content %}

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' with {
                'headerTitle': 'template',
                'name' : resource.name,
                'breadcrumbs': [{
                    'home' : {
                        'name' : 'home',
                        'path' : 'app_default_index'
                    },
                    'templates' : {
                        'name' : 'templates',
                        'path' : 'app_wrc_templates'
                    }
                }]
            }
            %}
            <div class="page-inner">
                <div class="row">
                    <div style="margin-top: -50px;" class="col-md-12">
                        <div class="card p-4 full-height">
                        	<form action="{{ path('app_wrc_template', {'id': resource.id}) }}" method="post">
                                <div class="card-header">
                                    <h2 class="d-inline-block">{{ resource.name }} </h2>
                                    <div class="float-right">
                                        <a class="btn btn-primary mr-4" href="{{ path('app_wrc_templates')}}"><i class="far fa-window-close mr-2"></i>{{ 'cancel'|trans|capitalize }}</a>
                                        <button class="btn btn-info mr-4 dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><span class="btn-label"><i class="fas fa-cog mr-2"></i></span>{{ 'options'|trans|capitalize }}</button>
                                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(710px, 43px, 0px); top: 0px; left: 0px; will-change: transform;">
                                            <a href="#changeLog" class="dropdown-item text" style="margin-right: 25px"
                                               data-toggle="modal"
                                               data-target="#changeLog"><i class="far fa-file-alt mr-2"></i>{{ 'change log'|trans|capitalize }}</a>
                                            <a href="#auditTrial" class="dropdown-item text" style="margin-right: 25px"
                                               data-toggle="modal"
                                               data-target="#auditTrial"><i class="fas fa-list mr-2"></i>{{ 'audit trail'|trans|capitalize }}</a>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <a href="#delete" class="dropdown-item text-danger" style="margin-right: 25px"
                                               data-toggle="modal"
                                               data-target="#delete"><i class="far fa-trash-alt mr-2"></i>{{ 'delete'|trans|capitalize }}</a>
                                        </div>
                                        <button class="btn btn-success"><i class="far fa-save mr-2"></i>{{ 'save'|trans|capitalize }}</button>
                                    </div>
                                </div>
								<div class="card-body">
									<div class="row">
        								<div class="col-md-4 col-sm-12">
        									<div class="form-group">
        										<label for="name">{{ 'name'|trans|capitalize }}</label>
        										<input type="text" class="form-control form-control-lg" id="name" name ="name" value="{% if resource.name is defined %}{{ resource.name }}{% endif %}" required>
        									</div>
    									</div> <!-- /.col -->
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                    <label for="name">{{ 'title'|trans|capitalize }}</label>
                                                    <input type="text" class="form-control form-control-lg" id="title" name ="title" value="{% if resource.title is defined %}{{ resource.title }}{% endif %}">
                                            </div><!-- /.form-group -->
                                        </div> <!-- /.col -->
    									<div class="col-md-4 col-sm-12">
        									<div class="form-group">
        										<label for="templateEngine">{{ 'template engine'|trans|capitalize }}</label>
        										<select id="templateEngine" name="templateEngine" class="form-control form-control-lg" required>
                                               		<option value="twig" {% if resource.templateEngine is defined and 'twig' == resource.templateEngine  %}selected=""{% endif %}>Twig</option>
                                                    <option value="md" {% if resource.templateEngine is defined and 'md' == resource.templateEngine  %}selected=""{% endif %}>Markdown</option>
                                                    <option value="rst" {% if resource.templateEngine is defined and 'rst' == resource.templateEngine  %}selected=""{% endif %}>reStructuredText</option>
                                                </select>
        									</div><!-- /.form-group -->
        								</div> <!-- /.col -->
    								</div><!-- /.row -->
                                    <div class="row">
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'organization'|trans|capitalize }}</label>
                                                <select id="organization" name="organization" class="form-control form-control-lg">
                                                    {% for organization in organizations %}
                                                        <option value="{{ organization['@id'] }}" {% if resource.organization is defined and organization['@id'] == resource.organization  %}selected=""{% endif %}>{{ organization.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div><!-- /.form-group -->
                                        </div> <!-- /.col -->
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'template groups'|trans|capitalize }}</label>
                                                <select id="templateGroups[]" name="templateGroups[]" class="form-control form-control-lg">
                                                    {% for templateGroup in templateGroups %}
                                                        <option value="{{ templateGroup['@id'] }}" {% if resource.templateGroups is defined and templateGroup['@id'] == resource.templateGroups[0]['@id']  %}selected=""{% endif %}>{{ templateGroup.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div><!-- /.form-group -->
                                        </div> <!-- /.col -->
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <label for="">{{ 'create slug'|trans|capitalize }}</label>
                                                <div>
                                                    {% if resource.content is defined and resource.content is not empty %}
                                                    <input type="radio" id="yes" name="createSlug" disabled>
                                                    <label id="yes" for="yes">{{ 'yes'|trans|capitalize }}</label></div>
                                                    <input type="radio" id="no" name="createSlug" disabled>
                                                    <label id="no" for="no">{{ 'no'|trans|capitalize }}</label></div>
                                                    {% else %}
                                                    <input type="radio" id="yes" name="createSlug" value="true" checked="checked">
                                                    <label id="yes" for="yes">{{ 'yes'|trans|capitalize }}</label></div>
                                                    <input type="radio" id="no" name="createSlug" value="false">
                                                    <label id="no" for="no">{{ 'no'|trans|capitalize }}</label></div>
                                                    {% endif %}
                                                </div>
                                            </div>

                                        </div> <!-- /.col -->

    								<div class="row">
        								<div class="col-md-12">
        									<div class="form-group">
        										<label for="description">{{ 'description'|trans|capitalize }}</label>
												<textarea class="form-control summernote" rows="5" id="description" name="description" required>{% if resource.description is defined %}{{ resource.description }}{% endif %}</textarea>
        									</div>
        								</div>  <!-- /.col -->
    								</div> <!-- /.row -->
    								<div class="row">
        								<div class="col-md-12">
        									<div class="form-group">
        										<label for="content">{{ 'content'|trans|capitalize }}</label>
												<textarea class="form-control" rows="40" id="content" name="content" required>{% if resource.content is defined %}{{ resource.content }}{% endif %}</textarea>
        									</div>
        								</div>  <!-- /.col -->
    								</div> <!-- /.row -->
                            </form>
                            <div class="card-action">
                                {% if resource.dateCreated is defined and resource.dateModified  is defined %}{{ 'created at'|trans|capitalize }} {{ resource.dateCreated|date("d-m-Y H:i:s", "Europe/Paris") }} | {{ 'last updated add'|trans|capitalize }}{{ resource.dateModified|date("d-m-Y H:i:s", "Europe/Paris") }}{% endif %}
                            </div><!-- /.card-action -->
								</div> <!-- /.card-body -->



                        </div><!-- /.card -->
                    </div><!-- /.col -->
                <div class="row">
                    <div class="col-md-12">
                        {% if resource.slugs is defined and resource.slugs is not empty %}
                        {% include 'wrc/widgets/slugs.html.twig'
                            with{
                            'slugs': resource.slugs,
                            'resource':resource
                        } %}
                        {% else %}
                            {% include 'wrc/widgets/slugs.html.twig'
                                with{
                                'slugs': slugs,
                                'resource':resource
                            } %}
                        {% endif %}
                    </div><!-- /.col -->
                </div><!-- /.row -->
                </div><!-- /.row -->

            </div><!-- /.page-inner -->
        </div>


        {% include 'widgets/delete_modal.html.twig'
            with {
            'route': 'app_wrc_template',
            'resource':resource,
            'id':'delete' } %}

        {% include 'widgets/auditTrail_modal.html.twig'
            with {
            'route': 'app_wrc_template',
            'resource':resource,
            'id':'auditTrial' } %}

        {% include 'widgets/changeLog_modal.html.twig'
            with {
            'route': 'app_wrc_template',
            'resource':resource,
            'id':'changeLog' } %}



        {% include 'footer.html.twig' %}

        </div>
    </div>
    <script>
    {% block javascript %}
    $(document).ready(function() {
        $('.summernote').summernote();
    });
    //audit_trails
    $.ajax({
        url: "/api/wrc/audit_trails",
        type: 'GET',
        dataType: 'json',
        success: function(result) {
            for(let i = 0; i < result['hydra:member'].length; i++ ){
                $('#audit').append('<tr>')
                $('#audit').append("<td>" + result['hydra:member'][i]['method'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['user'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['ip'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['session'] + "</td>");
                $('#audit').append("<td>" + result['hydra:member'][i]['dateCreated'] + "</td>");
                $('#audit').append('</tr>')
            }
        },
    });
    //change_logs
    $.ajax({
        url: "/api/wrc/change_logs",
        type: 'GET',
        dataType: 'json',
        success: function(result) {
            console.log(result);
            for(let i = 0; i < result['hydra:member'].length; i++ ){
                $('#changelog').append('<tr>')
                $('#changelog').append("<td>" + result['hydra:member'][i]['version'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['action'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['username'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['data'] + "</td>");
                $('#changelog').append("<td>" + result['hydra:member'][i]['dateCreated'] + "</td>");
                $('#changelog').append('</tr>')
            }
        },
    });
    {% endblock %}
    </script>
{% endblock %}
