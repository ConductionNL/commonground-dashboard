{% extends "body.html.twig" %}

{% block content %}

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' %}

            <div class="page-inner">
                <div class="row">
                    <div style="margin: auto;margin-top: -50px;" class="col-md-12">
                        <div class="card p-4">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th class="col-md-10">Locaties</th>
                                    <th class="col-md-2"></th>
                                    <th class="col-md-2"><a href="#newModal" data-toggle="modal"
                                                            data-target="#newModal"><i
                                                    style="font-size: 24px;color:limegreen" class="fa fa-plus"></i></a>
                                    </th>
                                </tr>
                                </thead>
                                <tr>
                                    <td class="col-md-10">Stadhuis grote zaal</td>
                                    <td class="col-md-2"><a href="#editModal" data-toggle="modal"
                                                            data-target="#editModal"><i class="fa fa-edit"></i></a></td>
                                    <td class="col-md-2"><a style="color: red;" href="#"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-md-10">Stadhuis kleine zaal</td>
                                    <td class="col-md-2"><a href="#editModal" data-toggle="modal"
                                                            data-target="#editModal"><i class="fa fa-edit"></i></a></td>
                                    <td class="col-md-2"><a style="color: red;" href="#"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-md-10">Stadskantoor</td>
                                    <td class="col-md-2"><a href="#editModal" data-toggle="modal"
                                                            data-target="#editModal"><i class="fa fa-edit"></i></a></td>
                                    <td class="col-md-2"><a style="color: red;" href="#"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </div>


            </div>

            {% include 'footer.html.twig' %}

        </div>
    </div>

    <div class="modal fade" style="text-align: center" id="newModal" tabindex="-1"
         role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog model-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><b>Locatie toevoegen</b></h5>
                    <button type="button" class="close" data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div style="padding-bottom: 0 !important;" class="modal-body p-4">

                    <p ><b>Naam:</b></p>

                    <input class="form-control" type="text">

                    <p class="mt-4"><b>Adres:</b></p>

                    <div class="d-flex flex-row">

                        <input class="form-control col-md-5 mr-2" type="text" placeholder="Straat">

                        <input class="form-control col-md-3 mr-2" type="text" placeholder="Huisnummer">

                        <input class="form-control col-md-3" type="text" placeholder="Toevoeging">

                    </div>

                    <div class="d-flex flex-row mt-3">
                        <input class="form-control col-md-6 mr-2" type="text" placeholder="Postcode">

                        <input class="form-control col-md-5" type="text" placeholder="Plaats">

                    </div>

                    <button type="button" class="btn btn-success float-right m-3">
                        Toevoegen
                    </button>

                </div>
                <div class="modal-footer">
                    <button style="width: 40%;" type="button" class="btn btn-danger m-auto" data-dismiss="modal">
                        Annuleren
                    </button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" style="text-align: center" id="editModal" tabindex="-1"
         role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog model-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><b>Locatie wijzigen</b></h5>
                    <button type="button" class="close" data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div style="padding-bottom: 0 !important;" class="modal-body p-4">

                    <p><b>Nieuwe naam:</b></p>
                    <form>
                        <form class="form-control">
                            <input class="form-control" type="text">

                        </form>

                        <button type="button" class="btn btn-success float-right m-3">
                            Wijzigen
                        </button>
                    </form>


                </div>
                <div class="modal-footer">
                    <button style="width: 40%;" type="button" class="btn btn-danger m-auto" data-dismiss="modal">
                        Annuleren
                    </button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
