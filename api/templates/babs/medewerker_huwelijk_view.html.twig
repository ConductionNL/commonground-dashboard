    {# Modals #}

    <div class="modal fade" style="text-align: center" id="typeModal" tabindex="-1"
         role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog model-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><b>Ceremonie wijzigen</b>
                    </h5>
                    <button type="button" class="close" data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div style="padding-bottom: 0 !important;" class="modal-body">
                    <p><b>Ceremonies:</b></p>
                    <form method="post"
                          action="{{ path('app_babs_medewerkerhuwelijkview', {id: variables.huwelijk.id}) }}">
                        <div class="d-block">
                            <select style="width: 250px;" class="form-control d-inline-block" name="type">
                                <option value="Huwelijk"
                                        {% if variables.huwelijk.properties.type is defined and variables.huwelijk.properties.type == "Huwelijk" %}selected{% endif %}>
                                    Huwelijk
                                </option>
                                <option value="Partnerschap"
                                        {% if variables.huwelijk.properties.type is defined and variables.huwelijk.properties.type == "Partnerschap" %}selected{% endif %}>
                                    Partnerschap
                                </option>
                                <option value="Omzetten"
                                        {% if variables.huwelijk.properties.type is defined and variables.huwelijk.properties.type == "Omzetten" %}selected{% endif %}>
                                    Omzetten
                                </option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-success m-3  mx-auto">
                            Opslaan
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" style="text-align: center" id="plechtigheidModal" tabindex="-1"
         role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog model-dialog-centered" role="document">
