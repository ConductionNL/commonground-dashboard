{% extends "body.html.twig" %}

{% block content %}

    <style>
        th {
            width: 33.33%;
        }
    </style>

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' %}

            <div class="page-inner">
                <div class="row">
                    <div style="margin-top: -50px;" class="col-md-12">
                        <div class="card p-4 full-height">
                            <div class="card-header">
                                <h2 class="d-inline-block">{{ variables.confirmedChecks }}/{{ variables.totalChecks }}
                                    {% if variables.confirmedChecks == variables.totalChecks %}
                                        <i style="color: limegreen;" class="fas fa-check"></i>
                                    {% else %}
                                        <i style="color:red">X</i>
                                    {% endif %}
                                    Huwelijksgegevens </h2>
                                <div class="float-right">
                                    <div class="row">
                                        <a class="btn btn-danger" style="margin-right: 25px" href="#deleteHuwelijkModal"
                                           data-toggle="modal" data-target="#deleteHuwelijkModal">Annuleren</a>

                                        <a class="btn btn-danger" style="margin-right: 25px"
                                           href="#deleteHuwelijkModal2"
                                           data-toggle="modal" data-target="#deleteHuwelijkModal2">Afkeuren</a>

                                        {% if variables.confirmedChecks == variables.totalChecks %}

                                            <form method="post"
                                                  action="{{ path('app_babs_medewerkerhuwelijkview', {id: variables.huwelijk.id}) }}">
                                                <input type="hidden" name="status" value="processed">
                                                <button type="submit" class="btn btn-success">Goedkeuren</button>
                                            </form>

                                        {% endif %}
                                    </div>
                                </div>

                            </div>
                            <table class="table table-hover">
                                <tr>
                                    <td style="width: 75px !important; padding-right: 0 !important; text-align: center">
                                        {% if variables.huwelijk.properties.type is not defined or variables.huwelijk.properties.type is empty %}
                                            <i style="color:red">X</i>
                                        {% else %}
                                            <i style="color: limegreen;" class="fas fa-check"></i>
                                        {% endif %}
                                    </td>
                                    <th>Ceremonie</th>
                                    <td>
                                        {% if variables.huwelijk.properties.type is not defined or variables.huwelijk.properties.type is empty %}
                                        {% else %}
                                            {{ variables.huwelijk.properties.type|capitalize }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        <button style="margin-left: 80%;padding: 7px 14px 7px 14px;" type="button"
                                                class="btn btn-primary"
                                                data-toggle="modal" data-target="#typeModal"><i style=""
                                                                                                class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 75px !important; padding-right: 0 !important; text-align: center">
                                        {% if variables.huwelijk.properties.plechtigheid is not defined or variables.huwelijk.properties.plechtigheid is empty %}
                                            <i style="color:red">X</i>
                                        {% else %}
                                            <i style="color: limegreen;" class="fas fa-check"></i>
                                        {% endif %}
                                    </td>
                                    <th>Plechtigheid</th>
                                    <td>
                                        {% if variables.huwelijk.properties.plechtigheid is not defined or variables.huwelijk.properties.plechtigheid is empty %}
                                        {% else %}
                                            {{ commonground_resource(variables.huwelijk.properties.plechtigheid).name }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        <button style="margin-left: 80%;padding: 7px 14px 7px 14px;" type="button"
                                                class="btn btn-primary"
                                                data-toggle="modal" data-target="#plechtigheidModal"><i style=""
                                                                                                        class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 75px !important; padding-right: 0 !important; text-align: center">
                                        {% if variables.huwelijk.properties.locatie is not defined or variables.huwelijk.properties.locatie is empty %}
                                            <i style="color:red">X</i>
                                        {% else %}
                                            <i style="color: limegreen;" class="fas fa-check"></i>
                                        {% endif %}
                                    </td>
                                    <th>Locatie</th>
                                    <td>
                                        {% if variables.huwelijk.properties.locatie is not defined or variables.huwelijk.properties.locatie is empty %}
                                        {% else %}
                                            {{ commonground_resource(variables.huwelijk.properties.locatie).name }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        <button style="margin-left: 80%;padding: 7px 14px 7px 14px;" type="button"
                                                class="btn btn-primary"
                                                data-toggle="modal" data-target="#locatieModal"><i style=""
                                                                                                   class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 75px !important; padding-right: 0 !important; text-align: center">
