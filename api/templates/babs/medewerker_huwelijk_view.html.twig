                                                    data-toggle="modal" data-target="#partner2Modal"><i style=""
                                                                                                        class="fas fa-edit"></i>
                                            </button>
                                        </th>
                                    {% else %}
                                        <th></th>
                                    {% endif %}
                                </tr>
                                <tr>
                                    <th>E-mail</th>
                                    {% if huwelijk.properties.partners[0] is defined and huwelijk.properties.partners[0] is not empty %}
                                        <td>
                                            {% if contact1.emails[0] is defined and contact1.emails[0] is not empty %}
                                                <p class="mb-0 pt-1 d-inline-block">{{ contact1.emails[0] }}</p>
                                            {% else %}
                                                <p style="color: lightgray" class="mb-0 pt-1 d-inline-block">Geen
                                                    emailadres</p>
                                            {% endif %}
                                            <button style="padding: 4px; float: right" type="button"
                                                    class="btn btn-primary"
                                                    data-toggle="modal" data-target="#partner1EmailModal"><i style=""
                                                                                                             class="fas fa-edit"></i>
                                            </button>
                                        </td>
                                    {% else %}
                                        <td></td>
                                    {% endif %}
                                    {% if huwelijk.properties.partners[1] is defined and huwelijk.properties.partners[1] is not empty %}
                                        <td>
                                            {% if contact1.emails[1] is defined and contact1.emails[1] is not empty %}
                                                <p class="mb-0 pt-1 d-inline-block">{{ contact1.emails[1] }}</p>
                                            {% else %}
                                                <p style="color: lightgray" class="mb-0 pt-1 d-inline-block">Geen
                                                    emailadres</p>
                                            {% endif %}
                                            <button style="padding: 4px; float: right" type="button"
                                                    class="btn btn-primary"
                                                    data-toggle="modal" data-target="#partner2EmailModal"><i style=""
                                                                                                             class="fas fa-edit"></i>
                                            </button>
                                        </td>
                                    {% else %}
                                        <td></td>
                                    {% endif %}
                                </tr>
                                <tr>
                                    <th>Telefoonnummer</th>
                                    {% if huwelijk.properties.partners[0] is defined and huwelijk.properties.partners[0] is not empty %}
                                        <td>
                                            {% if contact1.phone[0] is defined and contact1.phones[0] is not empty %}
                                                <p class="mb-0 pt-1 d-inline-block">{{ contact1.phones[0] }}</p>
                                            {% else %}
                                                <p style="color: lightgray" class="mb-0 pt-1 d-inline-block">Geen
                                                    telefoonnummer</p>
                                            {% endif %}
                                            <button style="padding: 4px; float: right" type="button"
                                                    class="btn btn-primary"
                                                    data-toggle="modal" data-target="#partner1PhoneModal"><i style=""
                                                                                                             class="fas fa-edit"></i>
                                            </button>
                                        </td>
                                    {% else %}
                                        <td></td>
                                    {% endif %}
                                    {% if huwelijk.properties.partners[1] is defined and huwelijk.properties.partners[1] is not empty %}
                                        <td>
                                            {% if contact1.phone[1] is defined and contact1.phones[1] is not empty %}
                                                <p class="mb-0 pt-1 d-inline-block">{{ contact1.phones[1] }}</p>
                                            {% else %}
                                                <p style="color: lightgray" class="mb-0 pt-1 d-inline-block">Geen
                                                    telefoonnummer</p>
                                            {% endif %}
                                            <button style="padding: 4px; float: right" type="button"
                                                    class="btn btn-primary"
                                                    data-toggle="modal" data-target="#partner2PhoneModal"><i style=""
                                                                                                             class="fas fa-edit"></i>
                                            </button>
                                        </td>
                                    {% else %}
                                        <td></td>
                                    {% endif %}
                                </tr>
                                <tr>
                                    <th>Naamgebruik</th>
                                    <td><p class="mb-0 pt-1 d-inline-block">{{ huwelijk.properties.overig.naamgebruik[0] }}</p>
                                        <button style="padding: 4px; float: right" type="button"
                                                class="btn btn-primary"
                                                data-toggle="modal" data-target="#partner1NaamModal"><i style=""
                                                                                                        class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                    <td><p class="mb-0 pt-1 d-inline-block">Henrika Timmers</p>
                                        <button style="padding: 4px; float: right" type="button"
                                                class="btn btn-primary"
                                                data-toggle="modal" data-target="#partner2NaamModal"><i style=""
                                                                                                        class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Leeftijd</th>
                                    <td>34 jaar</td>
                                    <td>37 jaar</td>
