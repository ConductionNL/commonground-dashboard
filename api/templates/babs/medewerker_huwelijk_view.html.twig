                                    <td>{{ huwelijk.status|capitalize }}</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td style="width: 75px !important; padding-right: 0 !important; text-align: center">
                                        <i style="color: red;">X</i>
                                    </td>
                                    <th>Betaald</th>
                                    <td>Nee</td>
                                    <td></td>
                                </tr>

                            </table>

                            <br>

                            <table class="table table-hover">
                                <tr>
