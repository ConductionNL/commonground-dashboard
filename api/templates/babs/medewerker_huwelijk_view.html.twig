                                            <i style="color:red">X</i>
                                        {% else %}
                                            <i style="color: limegreen;" class="fas fa-check"></i>
                                        {% endif %}
                                    </td>
                                    <th>Plechtigheid</th>
                                    <td>
                                        {% if huwelijk.properties.plechtigheid is not defined or huwelijk.properties.plechtigheid is empty %}
                                        {% else %}
                                            {{ commonground_resource(huwelijk.properties.plechtigheid).name }}
