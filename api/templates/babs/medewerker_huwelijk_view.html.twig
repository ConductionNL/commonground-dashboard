                                        <button style="margin-left: 80%;padding: 7px 14px 7px 14px;" type="button"
                                                class="btn btn-primary"
                                                data-toggle="modal" data-target="#tolkModal"><i style=""
                                                                                                class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 75px !important; padding-right: 0 !important; text-align: center">
                                        {% if variables.huwelijk.properties.extras is not defined or variables.huwelijk.properties.extras is empty %}
                                            <i style="color: red;">X</i>
                                        {% else %}
                                            <i style="color: limegreen;" class="fas fa-check"></i>
                                        {% endif %}</td>
                                    <th>Extra's</th>
                                    <td>
                                        {% if variables.huwelijk.properties.extras is not defined or variables.huwelijk.properties.extras is empty %}
                                        {% else %}
                                            {% for extra in variables.huwelijk.properties.extras %}
                                                {{ commonground_resource(extra).name }}<br>
                                            {% endfor %}
                                        {% endif %}
                                    </td>
                                    <td>
                                        <button style="margin-left: 80%;padding: 7px 14px 7px 14px;" type="button"
                                                class="btn btn-primary"
                                                data-toggle="modal" data-target="#extrasModal"><i style=""
                                                                                                  class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 75px !important; padding-right: 0 !important; text-align: center">
                                        <i style="color: red;">X</i>
                                    </td>
                                    <th>Betaald</th>
                                    <td>Nee</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td style="width: 75px !important; padding-right: 0 !important; text-align: center">
                                        {% if variables.huwelijk.status != "completed" and variables.huwelijk.status != "processed" %}
                                            <i style="color: red;">X</i>
                                        {% else %}
                                            <i style="color: limegreen;" class="fas fa-check"></i>
                                        {% endif %}
                                    </td>
                                    <th>Status</th>
                                    <td>{{ variables.huwelijk.status|capitalize }}</td>
                                    <td></td>
                                </tr>
                            </table>

                            <br>

                            <table class="table table-hover">
                                <tr>
                                    <th>Aangemaakt op</th>
                                    {% if variables.huwelijk.dateCreated is defined and variables.huwelijk.dateCreated is not empty %}
                                        <td>{{ variables.huwelijk.dateCreated|date("d-m-Y H:i", "Europe/Paris") }}</td>
                                    {% else %}
                                        <td style="color: lightgray">Geen datum</td>
                                    {% endif %}
                                </tr>
                                <tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="card p-4 full-height">
                            <div class="card-header">
                                <h2>Persoonsgegevens</h2>
                            </div>
                            <table class="table table-hover">
                                <tr>
