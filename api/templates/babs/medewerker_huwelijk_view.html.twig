                                        {% else %}
                                            <i style="color: limegreen;" class="fas fa-check"></i>
                                        {% endif %}
                                    </td>
                                    <th>Ceremonie</th>
                                    <td>
                                        {% if huwelijk.properties.type is not defined or huwelijk.properties.type is empty %}
                                        {% else %}
                                            {{ huwelijk.properties.type|capitalize }}
