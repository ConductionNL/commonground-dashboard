                                        <td>
                                            {% if contact1.emails is defined and contact1.emails is not empty %}
                                                <p class="mb-0 pt-1 d-inline-block">{{ contact1.emails[0].email }}</p>
                                            {% else %}
                                                <p style="color: lightgray" class="mb-0 pt-1 d-inline-block">Geen
                                                    emailadres</p>
                                            {% endif %}
                                            <button style="padding: 4px; float: right" type="button"
                                                    class="btn btn-primary"
                                                    data-toggle="modal" data-target="#partner1EmailModal"><i style=""
