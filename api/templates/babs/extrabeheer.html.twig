                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th class="col-md-10">Alle Extra's</th>
                                    <th class="col-md-2"></th>
                                    <th class="col-md-2"><a href="#newModal" data-toggle="modal"
                                                            data-target="#newModal"><i
