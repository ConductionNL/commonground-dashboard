{% extends "body.html.twig" %}

{% block content %}

    <div class="main-panel">
        <div class="container">

            {% include 'widgets/babs/title_h1.html.twig' %}

            <div style="margin-top: -25px;" class="col-md-12">
                <div class="card full-height">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Partner 1</th>
                            <th scope="col">Partner 2</th>
                            <th scope="col">Aangemaakt op</th>
                            <th scope="col">Status</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for partnerschap in partnerschappen %}
                            <tr>
                                {% if partnerschap.properties.partners[0] is defined and partnerschap.properties.partners[0] is not empty %}
                                    {% set assent1 = commonground_resource(partnerschap.properties.partners.0) %}
                                    {% set contact1 = commonground_resource(assent1.contact) %}
                                    <td>{{ contact1.name }}</td>
                                {% else %}
                                    <td></td>
                                {% endif %}
                                {% if partnerschap.properties.partners[1] is defined and partnerschap.properties.partners[1] is not empty %}
                                    {% set assent2 = commonground_resource(partnerschap.properties.partners.1) %}
                                    {% set contact2 = commonground_resource(assent2.contact) %}
                                    <td>{{ contact2.name }}</td>
                                {% else %}
                                    <td></td>
                                {% endif %}
                                {% if partnerschap.dateCreated is defined and partnerschap.dateCreated is not empty %}
                                    <td>{{ partnerschap.dateCreated|date("d-m-Y H:i", "Europe/Paris") }}</td>
                                {% else %}
                                    <td></td>
                                {% endif %}
                                {% if partnerschap.status is defined and partnerschap.status is not empty %}
                                    <td>{{ partnerschap.status|capitalize }}</td>
                                {% else %}
                                    <td></td>
                                {% endif %}
                                <td><a style="background: #cfebfd; padding: 6px; border-radius: 6px"
                                       href="#"><b>MEER INFO</b></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>


        </div>

        {% include 'footer.html.twig' %}

    </div>

{% endblock %}
