{% extends "body.html.twig" %}


{% block content %}

    <style>
        th {
            width: 33.33%;
        }
    </style>

    <div class="main-panel">
        <div class="container">
                {% include 'widgets/babs/title_h1.html.twig' with {
                    'headerTitle': 'calendar',
                    'name' : resource.name,
                    'breadcrumbs': [{
                        'home' : {
                            'name' : 'home',
                            'path' : 'app_default_index'
                        },
                        'calendars' : {
                            'name' : 'calendars',
                            'path' : 'app_arc_calendars'
                        }
                    }]
                }
                %}
            <div class="page-inner">
                <div class="row">

                    <div style="margin-top: -50px;" class="col-md-12">
                        <div class="card p-4 full-height">
                            <form action="{{ path('app_arc_calendar', {'id': resource.id}) }}" method="post">
                                <div class="card-header">
                                    <h2 class="d-inline-block">{% if resource.name is defined %}{{ resource.name }} {% else %} {{ 'calendar'|trans|capitalize }} {% endif%} </h2>

                                    <div class="float-right">
                                        <a class="btn btn-primary mr-4" href="{{ path('app_arc_calendars')}}"><i class="far fa-window-close mr-2"></i>{{ 'cancel'|trans|capitalize }}</a>
                                        <a href="#changeLog" class="btn btn-info" style="margin-right: 25px"
                                           data-toggle="modal"
                                           data-target="#changeLog"><i class="far fa-file-alt mr-2"></i>{{ 'change log'|trans|capitalize }}</a>
                                        <a href="#auditTrial" class="btn btn-info" style="margin-right: 25px"
                                           data-toggle="modal"
                                           data-target="#auditTrial"><i class="fas fa-list mr-2"></i>{{ 'audit trail'|trans|capitalize }}</a>
                                        <a href="#delete" class="btn btn-danger" style="margin-right: 25px"
                                           data-toggle="modal"
                                           data-target="#delete"><i class="far fa-trash-alt mr-2"></i>{{ 'delete'|trans|capitalize }}</a>
                                        <button class="btn btn-success"><i class="far fa-save mr-2"></i>{{ 'save'|trans|capitalize }}</button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'name'|trans|capitalize }}</label>
                                                <input type="text" class="form-control form-control-lg" id="name"
                                                       name="name"
                                                       value="{% if resource.name is defined %}{{ resource.name }}{% endif %}"
                                                       required>
                                            </div>
                                        </div> <!-- /.col -->
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'time zone'|trans|capitalize }}</label>
                                                <input type="text" class="form-control form-control-lg" id="timeZone"
                                                       name="timeZone"
                                                       value="{% if resource.timeZone is defined %}{{ resource.timeZone }}{% endif %}"
                                                       required>
                                            </div>
                                        </div> <!-- /.col -->
                                    </div> <!-- /.card-body -->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="largeInput">{{ 'description'|trans|capitalize }}</label>
                                                <textarea class="form-control summernote" rows="5" id="description"
                                                          name="description">{% if resource.description is defined %}{{ resource.description }}{% endif %}</textarea>
                                            </div>
                                        </div>  <!-- /.col -->
                                    </div> <!-- /.row -->

                                    <div class="card-action">
                                        {% if resource.dateCreated is defined and resource.dateModified  is defined %}{{ 'created at'|trans|capitalize }} {{ resource.dateCreated|date("d-m-Y H:i:s", "Europe/Paris") }} | {{ 'last updated add'|trans|capitalize }}{{ resource.dateModified|date("d-m-Y H:i:s", "Europe/Paris") }}{% endif %}
                                    </div><!-- /.card-action -->
                                </div>
                            </form>
                        </div><!-- /.card -->
                    </div>
                    {% if resource.id != "new" %}
                    <div class="col-md-4">
                        {% include 'arc/widgets/schedules.html.twig'
                            with {
                            'calendar':resource.id,
                            'schedules':schedules} %}
                    </div><!-- /.col -->
                        <div class="col-md-4">
                            {% include 'arc/widgets/events.html.twig'
                                with {
                                'calendar':resource.id,
                                'events':events} %}
                        </div><!-- /.col -->
                        <div class="col-md-4">
                            {% include 'arc/widgets/journals.html.twig'
                                with {
                                'calendar':resource.id,
                                'journals':journals} %}
                        </div><!-- /.col -->
                        <div class="col-md-4">
                            {% include 'arc/widgets/todos.html.twig'
                                with {
                                'calendar':resource.id,
                                'todos':todos} %}
                        </div><!-- /.col -->
                        <div class="col-md-4">
                            {% include 'arc/widgets/alarms.html.twig'
                                with {
                                'calendar':resource.id,
                                'alarms':alarms} %}
                        </div><!-- /.col -->
                        <div class="col-md-4">
                            {% include 'arc/widgets/freebusies.html.twig'
                                with {
                                'calendar':resource.id,
                                'freebusies':freebusies} %}
                        </div><!-- /.col -->
                    {% endif %}
                </div>
            </div><!-- /.row -->
        </div><!-- /.page-inner -->

        {% include 'widgets/delete_modal.html.twig'
            with {
            'route': 'app_arc_calendar',
            'resource':resource,
            'id':'delete' } %}

        {% include 'widgets/auditTrail_modal.html.twig'
            with {
            'route': 'app_arc_calendar',
            'resource':resource,
            'id':'auditTrial' } %}

        {% include 'widgets/changeLog_modal.html.twig'
            with {
            'route': 'app_arc_calendar',
            'resource':resource,
            'id':'changeLog' } %}


        {% include 'footer.html.twig' %}

    </div>
    </div>
    <script>
        {% block javascript %}
        //audit_trails
        $.ajax({
            url: "/api/arc/audit_trails",
            type: 'GET',
            dataType: 'json',
            success: function(result) {
                for(let i = 0; i < result['hydra:member'].length; i++ ){
                    $('#audit').append('<tr>')
                    $('#audit').append("<td>" + result['hydra:member'][i]['method'] + "</td>");
                    $('#audit').append("<td>" + result['hydra:member'][i]['user'] + "</td>");
                    $('#audit').append("<td>" + result['hydra:member'][i]['ip'] + "</td>");
                    $('#audit').append("<td>" + result['hydra:member'][i]['session'] + "</td>");
                    $('#audit').append("<td>" + result['hydra:member'][i]['dateCreated'] + "</td>");
                    $('#audit').append('</tr>')
                }
            },
        });
        //change_logs
        $.ajax({
            url: "/api/arc/change_logs",
            type: 'GET',
            dataType: 'json',
            success: function(result) {
                console.log(result);
                for(let i = 0; i < result['hydra:member'].length; i++ ){
                    $('#changelog').append('<tr>')
                    $('#changelog').append("<td>" + result['hydra:member'][i]['version'] + "</td>");
                    $('#changelog').append("<td>" + result['hydra:member'][i]['action'] + "</td>");
                    $('#changelog').append("<td>" + result['hydra:member'][i]['username'] + "</td>");
                    $('#changelog').append("<td>" + result['hydra:member'][i]['data'] + "</td>");
                    $('#changelog').append("<td>" + result['hydra:member'][i]['dateCreated'] + "</td>");
                    $('#changelog').append('</tr>')
                }
            },
        });
        {% endblock %}
    </script>
{% endblock %}
